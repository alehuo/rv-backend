{
    "name": "rv-backend",
    "version": "0.1.0",
    "description": "RV backend",
    "private": true,
    "engines": {
        "node": "20"
    },
    "scripts": {
        "start": "tsx -r dotenv/config ./src/server.ts",
        "watch": "tsx  -r dotenv/config --watch ./src/server.ts",
        "db:rollback": "tsx -r dotenv/config ./scripts/migrate-rollback.ts",
        "db:migrate": "tsx -r dotenv/config ./scripts/migrate-latest.ts",
        "db:seed": "tsx  -r dotenv/config ./scripts/seed.ts",
        "test": "nyc --reporter=lcov mocha --loader=tsx --exit test/**/*.test.ts -r dotenv/config dotenv_config_path=./.env.test dotenv_config_debug=true",
        "lint-ts": "eslint src/**/*.ts",
        "fix-ts": "eslint --fix src/**/*.ts",
        "start-container": "docker-compose up -d --build",
        "stop-container": "docker-compose down",
        "typecheck": "tsc --noEmit",
        "prepare": "husky install"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-openapi-validator": "^5.0.6",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.2",
        "knex": "^3.0.1",
        "pg": "^8.11.3",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.1",
        "@types/cors": "^2.8.15",
        "@types/express": "^4.17.20",
        "@types/jsonwebtoken": "^9.0.4",
        "@types/mocha": "^10.0.3",
        "chai": "^4.3.10",
        "chai-http": "^4.4.0",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-n": "^16.2.0",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^8.0.3",
        "lint-staged": "^15.0.2",
        "mocha": "^10.2.0",
        "nodemon": "^3.0.1",
        "nyc": "^15.1.0",
        "prettier": "^3.0.3",
        "prettier-eslint": "^16.1.2",
        "tsx": "^3.14.0",
        "typescript": "^5.2.2"
    },
    "lint-staged": {
        "*.{ts,js}": [
            "npm run lint"
        ],
        "*.{yml,md,html,json}": "prettier --write"
    }
}
